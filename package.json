{
  "name": "bruh-ae-site",
  "version": "0.1.0",
  "private": true,
  "description": "A modern parody of early-2000s personal/fan-page aesthetics using static HTML/CSS/JS",
  "scripts": {
    "build": "node build.js",
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
  "serve": "node -e \"const http=require('http'),fs=require('fs'),path=require('path');function type(p){if(p.endsWith('.html'))return'text/html';if(p.endsWith('.css'))return'text/css';if(p.endsWith('.js'))return'text/javascript';if(p.endsWith('.png'))return'image/png';if(p.endsWith('.gif'))return'image/gif';return'application/octet-stream';}http.createServer((req,res)=>{try{const u=new URL(req.url,'http://localhost');let p=path.join('dist',decodeURIComponent(u.pathname));if(fs.existsSync(p)&&fs.statSync(p).isDirectory()) p=path.join(p,'index.html');fs.readFile(p,(e,b)=>{if(e){res.statusCode=404;res.end('Not found');}else{res.setHeader('Content-Type',type(p));res.end(b);}});}catch(_){res.statusCode=500;res.end('err');}}).listen(5173,()=>console.log('http://localhost:5173'))\""
  },
  "engines": {
    "node": ">=16"
  }
}
